    filter: blur(5px);
    position: absolute;
    width: 100%;
    height: 360rpx;
    z-index: -1;
}

.userinfo-avatar {
  width: 176rpx;
  height: 176rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.userinfo-nickname{
    margin: 10rpx;
    color: white;
    font-size: 36rpx;
}

.userinfo-userIdentifiter{
    color: white;
    font-size: 24rpx;
}

.userinfo-userDescription{
    margin: 20rpx;
