<!--canvas.wxml-->
<view style="background-color:#F3F3F3">


<scroll-view class="scrollView" style="height:{{windowHeight}}px" scroll-y="true" bindscroll="scroll" bindscrolltolower="lower" bindscrolltoupper="upper">
    
    <block wx:for="{{items}}" wx:for-item="item" wx:key="*this">

<view class="blockView">
  <image mode="aspectFill" style="width: 100%;  height: 180px; background-color: #eeeeee;" src="{{item}}"></image>
     <text style="width: 100%;height:20px;">{{item}}</text>


</view>
     
  
  </block>
   
</scroll-view>


</view>



